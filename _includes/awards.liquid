<div class="awards">
  {% if site.awards != blank %}
    {% assign awads_size = site.awads | size %}
    <div
      class="table-responsive"
      {% if include.limit and site.announcements.scrollable and awads_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign awads = site.awads %}
        {% if include.limit and site.announcements.limit %}
          {% assign awads_limit = site.announcements.limit %}
        {% else %}
          {% assign awads_limit = awads_size %}
        {% endif %}
        {% for item in awads limit: awads_limit %}
          <tr style="display: flex; align-items: center;">
            <th scope="row" class="awads-date" style="width: auto; font-size: 10px; padding: 2px 2px; margin: 0; background-color: #2b5c9e; color: white; border-radius: 2px;">
              {{ item.date }}
            </th>
            <td style="margin-left: 15px;">
              {% if item.inline %}
                {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
              {% else %}
                <a class="awads-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No awads so far...</p>
  {% endif %}
</div>
